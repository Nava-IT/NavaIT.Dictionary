@model string
<div>
    <form id='searchform' action='/Search' method='get' onsubmit='onSearchSubmit()'>
        <div class='mb-3 text-center'>
            <label class='form-label @(Model != "IndexPage" ? "d-none" : "")' for='term'>جستجو واژه مصوّب</label>
            <div class=' input-group mb-3'>
                <input id='term' type='search' class='form-control border rounded-pill' placeholder=' ' name='term'>
                <div class='input-group-append'>
                    <button type='submit' class='btn btn-outline-secondary bg-white border-bottom-0 border rounded-pill' style='margin-right: -40px;'>
                        <svg xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' class='bi bi-search' viewBox='0 0 16 16'>
                            <path d='M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z'></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>